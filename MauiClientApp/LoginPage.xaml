<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClientApp.LoginPage"
             Title="LoginPage">
    <StackLayout Padding="30">
        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" Grid.Column="0" />
            <Button Text="ðŸ‘ï¸" Clicked="OnPasswordToggleClicked" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End" BackgroundColor="Transparent" />
        </Grid>
        <Button Text="Login" Clicked="OnLoginButtonClicked" />
        <ActivityIndicator x:Name="loadingIndicator"
                           IsRunning="False"
                           IsVisible="False"
                           HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>